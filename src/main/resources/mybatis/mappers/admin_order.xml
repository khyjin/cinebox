	<select id="selectTicketList" resultMap="ticketResult">
		<![CDATA[
		select * from (
			select
			row_number() over(order by ticket_number desc) as rnum,
			movie_id,
			movie_title,
			ticket_number,
			ticket_movie_day,
			member_id,
			to_char(ticket_cancle_date) as ticket_cancle_date,
			ticket_cancle_yn
		 	from cinebox_ticket
		 	where 1=1 
		 	]]>
		 	<include refid="search"></include>
		 	) cm
			where rnum between #{rowStart} and #{rowEnd}
			order by ticket_number desc		
	</select>
	<select id="listCount" resultType="int">
		<![CDATA[
		select count(ticket_number) from cinebox_ticket
		where 1=1 ]]>
		<include refid="search"></include>
		and to_number(ticket_number)>0
	</select>
	
	
	<sql id="search">
		<if test="keyword != null">
			<if test="searchType == 't'.toString()">and movie_title like '%'||#{keyword}||'%'</if>
			<if test="searchType == 'd'.toString()">and movie_director like '%'||#{keyword}||'%'</if>
		 	<if test="searchType == 'a'.toString()">and movie_actor like '%'||#{keyword}||'%'</if>
		</if>
	</sql>	
	

<select id="selectNewOrderList" resultMap="ticketResult"   parameterType="java.util.HashMap"  >
		  select * from (
			    select rowNum as recNum,t.*
			       from (
			              select  *  from t_shopping_order 
			              where to_char(pay_order_time,'yyyy-mm-dd')  between #{beginDate} and #{endDate}
			                <if test="search_type=='orderer_id'">
			                  AND orderer_id=#{search_word}
			                </if>
			                <if test="search_type=='orderer_name'">
			                  AND orderer_name=#{search_word}
			                </if>
			                <if test="search_type=='orderer_hp_num'">
			                   AND pay_orderer_hp_num=#{search_word} 
			                </if>
			              order by pay_order_time desc
					    ) t
				)							
			where				
		recNum between (#{section}-1)*100+ (#{pageNum}-1)*10+1 and (#{section}-1)*100+(#{pageNum})*10				        
	</select>
	
<update id="updateDeliveryState" parameterType="java.util.Map" >
	   update t_shopping_order
	    <set> 
	      <if test=" delivery_state!='' and delivery_state!=null">
	        delivery_state=#{delivery_state}
	      </if>
	    </set>
	    where 
	    order_id=#{order_id}
	</update>	
	
    <select id="selectOrderDetail" resultMap="ticketResult"   parameterType="int"  >
	    <![CDATA[
		    select * from t_shopping_order
            where order_id=#{order_id}
    	]]>
	</select>	
	
   <select id="selectOrderer" resultMap="memberResult"  parameterType="String"  >
	    <![CDATA[
			select * from t_shopping_member 
			where member_id=#{member_id}
		]]>
	</select>	
</mapper>

